{
  "name": "feedbook-backend",
  "version": "1.0.0",
  "description": "feedbook app",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "server": "env-cmd -f ./config/dev.env nodemon src/index.js",
    "test": "env-cmd -f ./config/test.env jest --watch --runInBand",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "repository": "https://github.com/wechuli/feedbook-backend.git",
  "author": "Wechuli <wechulipaul@yahoo.com>",
  "license": "MIT",
  "dependencies": {
    "cookie-session": "^1.3.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.19.0",
    "mongoose": "^5.6.5",
    "morgan": "^1.9.1",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "env-cmd": "^10.0.1",
    "jest": "^24.9.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2"
  }
}
